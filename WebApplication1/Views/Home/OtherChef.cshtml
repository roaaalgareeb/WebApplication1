@model IEnumerable<User>

@{
    Layout = "~/views/shared/_ChefLayout.cshtml";
}
<div class="recepie_area">
    <div class="container">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-xl-4 col-lg-4 col-md-6">
                    <div class="single_recepie text-center">
                        <div class="recepie_thumb">
                            <img src="@Url.Content("~/Images/"+item.ImagePath)" alt="image user">
                        </div>
                        <h3>@item.Fname @item.Lname</h3>
                        <p>@item.Email</p>
                        <a asp-action="GetRecipeByChef" asp-route-id="@item.UserId" class="line_btn">View all Recipe</a>

                    </div>
                </div>
                
            }
        </div>
            
    </div>
</div>