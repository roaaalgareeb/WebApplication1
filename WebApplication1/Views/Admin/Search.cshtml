@model IEnumerable<Recipe>
@{
    Layout = "~/views/shared/_Adminlayout.cshtml";
}

<div class="row">
<div class="col-6">
          <form action="Search" method="post">
            <input type="date" class="form-control" name="startDate" placeholder="Start Date">
            <input type="date" class="form-control" name="endDate" placeholder="End Date">
            <button type="submit" class="btn btn-dark">Search</button>
          </form>
</div>
</div>

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card my-4">
                <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                    <div class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3">
                        <h6 class="text-white text-capitalize ps-3">Recipes table</h6>
                    </div>
                </div>
                <table>
                    <tr>
                        <th>Recipe Name</th>
                        <th>Ingredients</th>
                        <th>Email</th>
                        <th>Is accepted</th>
                        <th>Create Date</th>
                        <th>ImageFile</th>
                    </tr>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.RecipeName</td>
                            <td>@item.Ingredients</td>
                            <td>@item.Email</td>
                            <td>@item.Isaccepted</td>
                            <td>@item.CreateDate</td>
                            <td><img src="@Url.Content("~/Images/" + item.ImagePath1)" height="50px" width="50px" /></td>
                        </tr>
                    }
                </table>
            </div>

        </div>
    </div>
</div>
